@model Munshi786.Models.ExpenseType

@{
    ViewBag.Title = "AddExpenseType";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Cost Centers</h2>

<div class="col-md-6 col-md-offset-3">
    <div class="block">
        <div class="header text-center">
            <h2>Add Cost Centers</h2>
        </div>
        <div class="content controls">
            @using (Html.BeginForm("AddExpenseType", "Property", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.name, "Cost Center Name", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <button type="submit" class="btn btn-success btn-block">Add</button>
                </div>
            </div>
            }
        </div>
    </div>
</div>
